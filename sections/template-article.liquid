<article>
  <div class="container mx-auto article-wrapper py-10 px-5">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'article_title' %}
          <div class="flex items-center justify-center">
            <div class="max-w-7xl text-center my-3">
              <a
                class="text-base uppercase text-gray-500 hover:text-gray-700 transition-all duration-200"
                href="{{ blog.url }}"
              >
                {{- blog.title -}}
              </a>
              <h1 class="text-3xl md:text-5xl font-medium">{{- article.title -}}</h1>
            </div>
          </div>

        {% when 'article_published_date' %}
          {% if section.settings.enable_published_date %}
            <div class="flex items-center justify-center">
              <div class="max-w-7xl text-center">
                <time
                  class="text-sm my-2"
                  datetime="{{ article.published_at | date: "%Y-%m-%d" }}"
                >
                  {{ article.published_at | date: format: 'on_date' }}
                </time>
              </div>
            </div>
          {% endif %}

        {% when 'article_author' %}
          {% if section.settings.enable_author %}
            <div class="flex items-center justify-center">
              <div class="max-w-7xl text-center">
                <small class="text-sm my-2"> By {{ article.author }} </small>
              </div>
            </div>
          {% endif %}

        {% when 'featured_image' %}
          <div class="overflow-hidden">
            <div class="flex items-center justify-center">
              <div class="max-w-7xl text-center w-full">
                {% if article.image != blank %}
                  <img
                    width="100%"
                    height="100%"
                    loading="lazy"
                    class="my-2 max-h-[200px] sm:max-h-[250px] md:max-h-[320px] lg:max-h-[400px] object-cover object-center rounded-md"
                    src="{{ article.image | image_url }}"
                    alt="{{ article.image.alt | escape }}"
                  >
                {% endif %}
              </div>
            </div>
          </div>

        {% when 'article_content' %}
          <div class="flex items-center justify-center">
            <div class="max-w-7xl text-center">
              <div class="main-content my-4">
                {{ article.content }}
              </div>
            </div>
          </div>

        {% else %}

      {% endcase %}
    {% endfor %}
  </div>
</article>

{% schema %}
{
  "name": "Temaplate Article",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_author",
      "label": "Author",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_published_date",
      "label": "Published Date",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "article_title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "article_published_date",
      "name": "Published Date",
      "limit": 1
    },
    {
      "type": "featured_image",
      "name": "Featured Image",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Content",
      "limit": 1
    }
  ]
}
{% endschema %}
